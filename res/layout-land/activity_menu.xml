<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.haako.practiceapplication.Menu"
    android:id="@+id/mainMenu">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Currency Calculators"
        android:id="@+id/calculatorsHeader"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="34dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Basic"
        android:id="@+id/basicBtn"
        android:onClick="basicBtn_click"
        android:layout_below="@+id/calculatorsHeader"
        android:layout_alignStart="@+id/calculatorsHeader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Intermediate"
        android:id="@+id/intermediateBtn"
        android:onClick="intermediateBtn_click"
        android:layout_below="@+id/basicBtn"
        android:layout_alignStart="@+id/basicBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Advanced"
        android:id="@+id/advancedBtn"
        android:onClick="advancedBtn_click"
        android:layout_below="@+id/intermediateBtn"
        android:layout_alignStart="@+id/intermediateBtn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="User Test"
        android:id="@+id/usersHeader"
        android:textAlignment="center"
        android:textSize="25dp"
        android:paddingBottom="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/logInBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register User"
        android:id="@+id/registerUserBtn"
        android:onClick="registerUserBtn_click"
        android:layout_marginStart="139dp"
        android:layout_alignTop="@+id/intermediateBtn"
        android:layout_toEndOf="@+id/calculatorsHeader" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:id="@+id/logInBtn"
        android:onClick="logInBtn_click"
        android:layout_alignTop="@+id/basicBtn"
        android:layout_alignStart="@+id/registerUserBtn" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Manage User"
        android:layout_below="@+id/registerUserBtn"
        android:layout_centerHorizontal="true"
        android:id="@+id/manageUserBtn"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="List Users"
        android:id="@+id/listUsersBtn"
        android:layout_below="@+id/manageUserBtn"
        android:layout_alignStart="@+id/manageUserBtn"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:visibility="gone" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Out"
        android:id="@+id/logOutBtn"
        android:layout_below="@+id/listUsersBtn"
        android:layout_centerHorizontal="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentStart="false"
        android:visibility="gone"
        android:onClick="logOutBtn_click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Preferences"
        android:id="@+id/prefsBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/registerUserBtn"
        android:layout_marginBottom="27dp"
        android:onClick="prefsBtn_click" />

</RelativeLayout>
